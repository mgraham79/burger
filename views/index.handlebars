<h1>Eat-Da-Burger!</h1>


<div class="row">
    <div class="col-md-6">
        <div id="uneaten-burgers">
            <ul>
                {{#each burgers}} {{#unless devoured}} {{> burger-block devoured=false}} {{/unless}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-md-6">
        <div id="devoured-burgers"></div>
        <h2>Burgers that are eaten!</h2>
        <ul>
            {{#each burgers}} {{#if devoured}} {{> burger-block devoured=true}} {{/if}} {{/each}}
        </ul>
    </div>
</div>

</div>


<form class="create-form">

    <div class="form-group">
        <!--<label for="bu">Burger Name:</label>-->
        <input type="text" id="bu" name="name">
    </div>


    <button type="submit">Submit</button>
</form>
<h2>Enter a Burger you want to eat and Click the "Submit" button</h2>